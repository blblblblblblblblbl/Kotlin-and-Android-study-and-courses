<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultsFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/back">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animviewResults"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        >
    </com.airbnb.lottie.LottieAnimationView>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1.My.Big"
        >
    </com.google.android.material.textview.MaterialTextView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton.my"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1.My.Medium"
        android:text="@string/start_again"
        ></com.google.android.material.button.MaterialButton>
</LinearLayout>