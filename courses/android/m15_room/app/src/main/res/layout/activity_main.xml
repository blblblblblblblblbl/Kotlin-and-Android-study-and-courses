<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tInpLay"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_word">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tInpEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bAdd"
        style="@style/Widget.Material3.Button.OutlinedButton.My"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/badd_word"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1.My.Medium" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bClear"
        style="@style/Widget.Material3.Button.OutlinedButton.My"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_clear"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1.My.Medium" />


</LinearLayout>